
@{
    ViewBag.Title = "Quick Search";
}
<div class="container">
    <h3 class="marBottom">@Html.TranlateLabel(Helper.Atmng(), "File Search", "Recherche de dossiers")</h3>

    <div class="row">
        <div class="col-sm-8">
            @using (Html.BeginForm("Search", "Search", FormMethod.Get, new { @class = "form-horizontal" }))
            {

                <div class="form-group">
                    <label for="term" class="control-label col-sm-3">@Html.TranlateLabel(Helper.Atmng(), "Find:", "Critères :")</label>
                    <div class="col-sm-5">
                        <input type="text" class="form-control" name="term" id="iterm" autofocus />
                    </div>
                </div>
                <div class="form-group">
                    <label for="method" class="control-label col-sm-3">@Html.TranlateLabel(Helper.Atmng(), "Method:", "Méthode :")</label>
                    <div class="col-sm-5">
                        <select name="method" class="form-control">
                            <option value="sin">@Html.TranlateLabel(Helper.Atmng(), "Social Insurance Number", "Numéro d'assurance sociale")</option>
                            <option value="filenumber">@Html.TranlateLabel(Helper.Atmng(), "File Number", "Numéro de dossier")</option>
                            <option value="lastname">@Html.TranlateLabel(Helper.Atmng(), "Last Name", "Nom de famille")</option>
                            <option value="fullfilenumber">@Html.TranlateLabel(Helper.Atmng(), "Full File Number", "Numéro de dossier entier")</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-5">
                        <input type="hidden" value="1" name="page" />
                        <input type="submit" class="btn btn-primary" value="@Html.TranlateLabel(Helper.Atmng(), "Search", "Recherche")" />
                    </div>
                </div>

            }

        </div>
    </div>
    <h3>@Html.TranlateLabel(Helper.Atmng(), "Recently Viewed", "Dossiers vus récemment")</h3>
    <div class="container">
        <div>@Html.ActionLink(Html.TranlateLabel(Helper.Atmng(), "Today", "Aujourd'hui"), "RecentFiles", new { method = "today", page = 1 })</div>
        <div>@Html.ActionLink(Html.TranlateLabel(Helper.Atmng(), "Yesterday", "Hier"), "RecentFiles", new { method = "yesterday", page = 1 })</div>
        <div>@Html.ActionLink(Html.TranlateLabel(Helper.Atmng(), "This Week", "Cette semaine"), "RecentFiles", new { method = "thisweek", page = 1 })</div>
        <div>@Html.ActionLink(Html.TranlateLabel(Helper.Atmng(), "Last Week", "La semaine dernière"), "RecentFiles", new { method = "lastweek", page = 1 })</div>
    </div>
</div>